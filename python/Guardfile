guard :shell do
  watch("Gemfile") do |m|
    title = "Bundler output"
    msg = "Bundler Failure"
    status = :failed

    if system("bundle")
      msg = "Bundled"
      status = :status
    end

    n msg, title, status

    "-> #{msg}"
  end

  watch(/.+\.py/) do |m|
    title = "Lint output"
    msg = "Linted"
    status = :failed

    if system("pylint *.py -r n")
      status = :success
    end

    n msg, title, status

    "-> #{msg}"
  end
end
